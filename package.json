{
  "name": "smart-wallet-ui",
  "version": "1.0.0",
  "description": "Smart wallet UI",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:api": "node --experimental-wasm-modules --import tsx/esm --watch api-server.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "legacy:start": "node --experimental-wasm-modules --import tsx/esm app.ts",
    "legacy:dev": "node --experimental-wasm-modules --import tsx/esm --watch app.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zkFold/smart-wallet-ui.git"
  },
  "keywords": [
    "cardano",
    "wallet"
  ],
  "author": "Vladimir Morozov",
  "license": "BUSL-1.1",
  "bugs": {
    "url": "https://github.com/zkFold/smart-wallet-ui/issues"
  },
  "homepage": "https://github.com/zkFold/smart-wallet-ui#readme",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.15.2",
    "concurrently": "^9.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vite": "^5.4.10",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  },
  "dependencies": {
    "@emurgo/cardano-serialization-lib-browser": "^14.1.1",
    "@scure/bip39": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "zkfold-smart-wallet-api": "^1.3.0"
  }
}
