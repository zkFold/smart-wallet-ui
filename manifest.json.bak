{
  "manifest_version": 3,
  "name": "Smart Wallet Extension",
  "version": "1.0",
  "description": "A browser extension for managing your smart wallet.",
  "permissions": [
    "storage",
    "activeTab",
    "identity"
  ],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  },
  "action": {
    "default_title": "Open UI"
  },
  "host_permissions": [
    "https://wallet-prover.zkfold.io/v0/*",
    "https://wallet-api.zkfold.io/v0/*",
    "https://www.googleapis.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "oauth2": {
    "client_id": "232676559228-qd3cckrs7okq0mpii17da4950haap9ds.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}
